!!!
%html
%head
  %title Roshambo's Health Care Forum
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = stylesheet_link_tag    'dashboard',   media: 'all'
  %link{ rel:'stylesheet', href:'https://fonts.googleapis.com/css?family=Lobster|Chewy|Permanent+Marker|Lato', type:'text/css'}
  %link{ rel:'stylesheet', herf:'https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css', type:'text/css'}

  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
  = javascript_include_tag :defaults,'tool_kit'
  %script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyDZaGH2wDtOAEfAtcuPtD0MhSA0tNL_r-8&signed_in=true&libraries=places&callback=initMap"}

%body
  %header.main_header.clearfix
    .wrapper
      #logo
        %p= link_to "Roshambo's Health Care", root_path
      #buttons
        -if user_signed_in?
          =link_to "Dashboard", dashboard_path
        =link_to "Forum", posts_path
        =link_to "Hot deals", list_path
        =link_to "Tool Kit", tool_kit_path
        -if user_signed_in?
          = link_to "New Post", new_post_path
          = link_to "Sign Out", destroy_user_session_path, method: "DELETE"
        -else
          = link_to "Sign Up", new_user_registration_path
          = link_to "Sign In", new_user_session_path

  %footer.main_footer.clearfix
    .wrapper
      %p
        %center
          All rights reserved by
          %a{:href => "https://github.com/2015au-1730/RoshamboProject06.git"} Roshambo

  .wrapper
    %p.notice=notice
    %p.alert=alert

  .wrapper
    = yield
