#posts
  -@posts.each do |post|
    .post
      %h2.title= link_to post.title, post_path(post)
      %p.date
        Published at
        = time_ago_in_words(post.created_at)
        ago
        =post.created_at
        By
        =post.user.email
        - if  time_ago_in_words(post.updated_at)!= time_ago_in_words(post.created_at)
          Updated
          =time_ago_in_words(post.updated_at)
          at
          =post.updated_at
